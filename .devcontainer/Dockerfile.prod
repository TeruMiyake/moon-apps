FROM node:lts-hydrogen

RUN apt-get update && apt-get install -y \
    mariadb-client \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

RUN mkdir -p /home/node/moon-apps
WORKDIR /home/node/moon-apps

COPY package*.json ./

RUN npm install

COPY . .

RUN npx prisma migrate deploy
RUN npm run build